{
  "manifest_version": 3,
  "name": "Channel Playlists for YouTube",
  "description": "A lightweight extension for YouTube that redirects the browser to a playlist of all a channel's videos.",
  "version": "1.2",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": [
    "http://www.youtube.com/*",
    "https://www.youtube.com/*"
  ]
}